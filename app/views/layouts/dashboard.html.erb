<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:html_head_title) %> | Baseline6_0</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%#= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %><!-- non usiamo asset-pipeline -->
    <%= stylesheet_pack_tag 'application_dashboard', media: 'all', 'data-turbolinks-track': 'reload' %><!-- serve per heroku. In locale non serve perchÃ© indichiamo lo stile direttamente da "packs/application.js"-->
    <%= javascript_pack_tag 'application_dashboard', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/dashboard_navbar' %>
    
    <!-- Alert messages -->
    <% if notice %>
      <!--<p class="alert alert-info"><%#= notice %></p>-->
      <div class="alert alert-info alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>
    <% if alert %>
      <!--<p class="alert alert-warning"><%#= alert %></p>-->
      <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= notice %>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    <% end %>

    <%= yield %>

    <p class="alert alert-info text-center">Ambiente Dashboard</p>

  </body>
</html>
